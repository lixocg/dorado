<script src="${ctx}/resources/jquery/jquery.min.js"></script>
<script>
	var ctx="${ctx}";
	function submitForm(){
		var rs=ajaxPost(ctx+"/base/loginSys",{user:$("#user").val(),pwd:$("#pwd").val()});
		if(rs.code=="01"){
			window.location.href=ctx+"/base/main";
		}else{
			alert(rs.data);
		}
	}
	function ajaxPost(url,data) {  
        var returnvalue;  
        var options = {  
            type: 'POST',  
            url: url,  
            data: data,  
            async:false,  
            success: function (result) {  
            	returnvalue = result;  
            },  
            dataType: "json",  
            error: function (result) {  
                alert(JSON.stringify(result));  
            }  
        };  
        $.ajax(options);   
        return returnvalue;  
    }
	
	$(function(){
		$("body").bind('keydown',function(event) {  
		    if(event.keyCode==13){  
		    	submitForm();
		    }     
		});     
	});
		
</script>
